{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ESNext",
    "paths": {
      "@components/*": ["./src/components/*"],
      "@functions/*": ["./src/functions/*"],
      "@layouts/*": ["./src/layouts/*"],
      "@stores/*": ["src/stores/*"],
      "@styles/*": ["./src/styles/*"]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "esModuleInterop": true,
      "module": "commonjs"
    }
  }
}
