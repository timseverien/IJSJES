---
import BaseLayout from '@layouts/Base.astro';
import { Footer } from '@components/Footer';
import { Header } from '@components/Header';

const { schema } = Astro.props;
---

<BaseLayout schema={schema}>
	<Header requestUrl={Astro.url} />

	<div class="content">
		<slot />
		<Footer />
	</div>
</BaseLayout>

<style>
	.content {
		margin: 1em;
	}
</style>
